<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="bottomSheetStyle">@style/BottomSheet.StyleDialog</item>

    </style>

    <style name="arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:background">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
    </style>



    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/blue_theme</item>
        <item name="background">@color/blue_theme</item>
        <item name="colorPrimary">@color/blue_theme</item>
        <item name="colorPrimaryDark">@color/blue_theme</item>
        <item name="elevation">0dp</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>

    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="bs_dialogBackground">@color/blue_theme</item>
    </style>




</resources>
